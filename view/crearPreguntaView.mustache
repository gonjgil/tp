<div class="w3-container" style="margin-top:70px">
    <br>
    <br>
    <div class="w3-container" style="margin:auto; max-width:600px;">

        <div class="w3-panel w3-card w3-round-large w3-padding-16 w3-light-grey"
             style="border: 2px solid #6a00ff;">

            <h2 class="w3-center"><b>Crear nueva pregunta</b></h2>

            {{#mensaje}}
            <div class="w3-panel w3-green w3-round-large w3-padding w3-margin-bottom">
                {{mensaje}}
            </div>
            {{/mensaje}}

            <form method="post" action="/crearpregunta/guardar">

                <div class="w3-section">
                    <label for="pregunta"><b>Pregunta:</b></label>
                    <input class="w3-input w3-border w3-round-large" type="text" name="pregunta" id="pregunta" required>
                </div>

                <div class="w3-section">
                    <label for="opcionA"><b>Opción A:</b></label>
                    <input class="w3-input w3-border w3-round-large" type="text" name="opciones[A]" id="opcionA" required>
                </div>

                <div class="w3-section">
                    <label for="opcionB"><b>Opción B:</b></label>
                    <input class="w3-input w3-border w3-round-large" type="text" name="opciones[B]" id="opcionB" required>
                </div>

                <div class="w3-section">
                    <label for="opcionC"><b>Opción C:</b></label>
                    <input class="w3-input w3-border w3-round-large" type="text" name="opciones[C]" id="opcionC" required>
                </div>

                <div class="w3-section">
                    <label for="opcionD"><b>Opción D:</b></label>
                    <input class="w3-input w3-border w3-round-large" type="text" name="opciones[D]" id="opcionD" required>
                </div>

                <div class="w3-section">
                    <label for="respuesta_correcta"><b>Respuesta correcta:</b></label>
                    <select class="w3-select w3-border w3-round-large" name="respuesta_correcta" id="respuesta_correcta" required>
                        <option value="" disabled selected>Seleccione la respuesta</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="D">D</option>
                    </select>
                </div>

                <div class="w3-section">
                    <label for="categoria_id"><b>Categoría:</b></label>
                    <select class="w3-select w3-border w3-round-large" name="categoria_id" id="categoria_id" required value="2">
                        <option value="" disabled selected>Seleccione una categoría</option>
                        {{#categories}}
                        <option value="{{id}}">{{name}}</option>
                        {{/categories}}
                    </select>
                </div>

                <div class="w3-center w3-margin-top">
                    <button class="w3-button w3-green w3-round-large w3-padding" style="width:200px;" type="submit">
                    <i lass="fa fa-save">Guardar</i>
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

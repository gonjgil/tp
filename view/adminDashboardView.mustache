<div class="w3-container" style="margin-top:70px">
  <h2 class="w3-center">Dashboard de Administración</h2>

  <!-- Filtros -->
  <form method="get" action="/admin/dashboard" class="w3-margin-bottom">
    Desde: <input type="date" name="from" value="{{from}}">
    Hasta: <input type="date" name="to"   value="{{to}}">
    <button class="w3-button w3-blue">Aplicar</button>
    <button type="submit" class="w3-button w3-red" formaction="/admin/exportarPDF" formtarget="_blank">
      Exportar PDF
    </button>
  </form>

  <!-- Gráfico 1: Preguntas por categoría -->
  <div class="w3-panel w3-card w3-padding">
    <h3>Preguntas por Categoría</h3>
    {{#hasData}}
    <img
      src="{{chartUrl}}"
      alt="Preguntas por categoría"
      style="max-width:100%; height:auto;"
    />
    {{/hasData}}
    {{^hasData}}
      <div>No hay datos para las fechas seleccionadas.</div>
    {{/hasData}}
  </div>

  <!-- Gráfico 2: Volumen diario de preguntas -->
  <div class="w3-panel w3-card w3-padding w3-margin-top">
    <h3>Volumen diario de preguntas</h3>
    {{#hasData}}
    <img
      src="{{chartByDayUrl}}"
      alt="Preguntas por día"
      style="max-width:100%; height:auto;"
    />
    {{/hasData}}
    {{^hasData}}
      <div>No hay datos para las fechas seleccionadas.</div>
    {{/hasData}}
  </div>

</div>

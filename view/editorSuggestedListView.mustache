<div class="w3-container w3-margin-top">
    <br>
    <br>
    <br>
  <h2>Preguntas Nuevas</h2>
  <table class="w3-table-all w3-hoverable w3-centered">
    <thead>
      <tr class="w3-win8-blue">
        <th>ID</th>
        <th>Categoría</th>
        <th>Creada por</th>
        <th>Fecha creación</th>
        <th>Acción</th>
      </tr>
    </thead>
    <tbody>
      {{#questions}}
      <tr>
        <td>{{id}}</td>
        <td>{{category_name}}</td>
        <td>{{creator}}</td>
        <td>{{created_at}}</td>
        <td>
          <a href="/editor/viewSuggestion/{{id}}"
             class="w3-button w3-small w3-indigo">
            Ver Pregunta
          </a>
        </td>
      </tr>
      {{/questions}}
      {{^questions}}
      <tr><td colspan="6">No hay sugerencias.</td></tr>
      {{/questions}}
    </tbody>
  </table>
    <br>
</div>
